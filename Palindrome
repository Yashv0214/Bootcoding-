class HelloWorld {
    public static void main(String[] args) {
    int n = 1221;
    int rev=0;
    int number=0;
    while(n !=0){
        
    number= n % 10;
    
    rev = (rev * 10)+ number ;
    
    n = n/10;
    }
    if(n==rev){
    System.out.println("Number is palindrome");
    }else{
    System.out.println("Not A pallindrome");
    }
    }
}
